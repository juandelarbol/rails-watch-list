<div class="container my-5">
  <h1 class="display-4 text-center mb-4">Your Lists</h1>
  <div class="row g-4">

    <!-- Carte pour crÃ©er une nouvelle liste -->

    <div class="col-md-6 col-lg-4">
      <%= link_to new_list_path, class: "card text-decoration-none text-dark shadow-sm", style: "height: 320px;" do %>
        <div class="card-body d-flex flex-column justify-content-center">
          <h2 class="h5 card-title text-center mb-0">Create a new list</h2>
        </div>
      <% end %>
    </div>

    <!-- Cartes pour les listes existantes -->
    <% @lists.each do |list| %>
      <div class="col-md-6 col-lg-4">
        <%= link_to list_path(list), class: "card text-decoration-none text-dark shadow-sm", style: "height: 320px;" do %>
          <div class="card-body d-flex flex-column justify-content-center">
            <h2 class="h5 card-title text-center mb-0"><%= list.name %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>